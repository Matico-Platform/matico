{
  "name": "matico",
  "version": "1.0.0",
  "description": "Matico monorepo of parts",
  "main": "index.js",
  "repository": "git@github.com:stuartlynn/matico_spec_test.git",
  "author": "Stuart Lynn <stuart.lynn@gmail.com>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "./matico_spec",
    "./matico_components",
    "./matico_types",
    "./matico_admin",
    "./matico_app_server",
    "./matico_charts",
    "./editor"
  ],
  "devDependencies": {
    "@types/node": "^14.11.2",
    "concurrently": "^7.3.0",
    "next": "12.2.0",
    "prettier": "2.7.1",
    "typescript": "~4.7.0"
  },
  "nohoist": [
    "**/webpack**",
    "**/babel-loader**"
  ],
  "scripts": {
    "predeploy": "yarn run build",
    "start": "concurrently \"cd matico_components && yarn start\" \"cd editor && yarn start\" ",
    "dev-editor": "concurrently \"cd matico_components && yarn build-dev\" \"cd editor && yarn start\" ",
    "build": "yarn workspace @maticoapp/matico_charts build-prod && yarn workspace @maticoapp/matico_components build-prod &&  (cd matico_app_server && yarn run prisma generate && yarn build )",
    "deploy": "yarn predeploy && yarn run netlify deploy --prod",
    "build_rust_docs": "cargo doc --open --document-private-items --no-deps",
    "prettier-check": "yarn prettier --check '**/*.{js,ts,jsx,tsx}'",
    "prettier-write": "yarn prettier --write '**/*.{js,ts,jsx,tsx}'",
    "rust-format":  "cargo fmt"
  },
  "packageManager": "yarn@3.2.2",
  "dependencies": {
    "concurrently": "^7.3.0"
  }
}
